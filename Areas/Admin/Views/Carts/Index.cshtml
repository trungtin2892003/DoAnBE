@model IEnumerable<ShopCake.Models.Cart>

@{
    ViewData["Title"] = "Carts";
}

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3 class="card-title">Carts</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-dark">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.CAR_ID)</th>  <!-- Mã giỏ hàng -->
                                <th>@Html.DisplayNameFor(model => model.USE_ID)</th>  <!-- Mã người dùng -->
                                <th>@Html.DisplayNameFor(model => model.MEM_ID)</th>  <!-- Mã thành viên -->
                                <th>@Html.DisplayNameFor(model => model.CartDate)</th>
                                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
                                <th>@Html.DisplayNameFor(model => model.Discount)</th>
                                <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                                <th>@Html.DisplayNameFor(model => model.Note)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                                <th>@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                                <th>@Html.DisplayNameFor(model => model.UpdatedBy)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CAR_ID)</td>  <!-- Hiển thị Mã giỏ hàng -->
                                    <td>@Html.DisplayFor(modelItem => item.USE_ID)</td>  <!-- Hiển thị Mã người dùng -->
                                    <td>@Html.DisplayFor(modelItem => item.MEM_ID)</td>  <!-- Hiển thị Mã thành viên -->
                                    <td>@Html.DisplayFor(modelItem => item.CartDate)</td>
                                   
                                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                                    <td>
                                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CAR_ID">Edit</a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CAR_ID" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
