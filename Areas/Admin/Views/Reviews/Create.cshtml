@model ShopCake.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Create New Order</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Member Dropdown -->
                        <div class="form-group">
                            <label asp-for="MEM_ID" class="control-label">Member</label>
                            <select asp-for="MEM_ID" class="form-control" asp-items="ViewBag.MEM_ID"></select>
                            <span asp-validation-for="MEM_ID" class="text-danger"></span>
                        </div>

                        <!-- Product Dropdown -->
                        <div class="form-group">
                            <label asp-for="PRO_ID" class="control-label">Product</label>
                            <select asp-for="PRO_ID" class="form-control" asp-items="ViewBag.PRO_ID"></select>
                            <span asp-validation-for="PRO_ID" class="text-danger"></span>
                        </div>

                        <!-- Rating Input -->
                        <div class="form-group">
                            <label asp-for="Rate" class="control-label">Rate</label>
                            <input asp-for="Rate" class="form-control" type="number" min="1" max="5" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>

                        <!-- Content Input -->
                        <div class="form-group">
                            <label asp-for="Content" class="control-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Review Date Input -->
                        <div class="form-group">
                            <label asp-for="ReviewDate" class="control-label">Review Date</label>
                            <input asp-for="ReviewDate" class="form-control" type="date" />
                            <span asp-validation-for="ReviewDate" class="text-danger"></span>
                        </div>

                        <!-- Created Date Input -->
                        <div class="form-group">
                            <label asp-for="CreatedDate" class="control-label">Created Date</label>
                            <input asp-for="CreatedDate" class="form-control" type="datetime" readonly />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>

                        <!-- Created By Input -->
                        <div class="form-group">
                            <label asp-for="createdBy" class="control-label">Created By</label>
                            <input asp-for="createdBy" class="form-control" readonly />
                            <span asp-validation-for="createdBy" class="text-danger"></span>
                        </div>

                        <!-- Updated Date Input -->
                        <div class="form-group">
                            <label asp-for="updatedDate" class="control-label">Updated Date</label>
                            <input asp-for="updatedDate" class="form-control" type="datetime" />
                            <span asp-validation-for="updatedDate" class="text-danger"></span>
                        </div>

                        <!-- Updated By Input -->
                        <div class="form-group">
                            <label asp-for="updatedBy" class="control-label">Updated By</label>
                            <input asp-for="updatedBy" class="form-control" />
                            <span asp-validation-for="updatedBy" class="text-danger"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="form-group text-center">
                            <input type="submit" value="Create Review" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
