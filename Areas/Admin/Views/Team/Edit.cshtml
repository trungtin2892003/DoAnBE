@model ShopCake.Models.Team

@{
    ViewData["Title"] = "Edit Team";
}

<div class="container mt-5">
    <!-- Form Container -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">Edit Team</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden Input for Team ID -->
                        <input type="hidden" asp-for="TEAM_ID" />

                        <!-- Name -->
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter team member's name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Position -->
                        <div class="form-group">
                            <label asp-for="Position" class="control-label"></label>
                            <input asp-for="Position" class="form-control" placeholder="Enter position" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>

                        <!-- Avatar Upload -->
                        <div class="form-group">
                            <label asp-for="PhotoUrl" class="control-label">Current Avatar</label>
                            <div>
                                <img src="~/Data/Team/@Model.PhotoUrl" alt="Current Avatar" style="max-width: 400px; height: 100px; margin-bottom: 10px;" />
                            </div>

                            <label>New Avatar Preview</label>
                            <img id="image-preview" src="~/Data/Team/@Model.PhotoUrl" alt="New Avatar Preview" style="max-width: 400px; height: 100px; margin-bottom: 10px;" />
                            <input asp-for="PhotoUrl" class="form-control" type="file" accept="image/*" onchange="previewImage(event)" />
                            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                        </div>

                        <!-- Facebook URL -->
                        <div class="form-group">
                            <label asp-for="FacebookUrl" class="control-label"></label>
                            <input asp-for="FacebookUrl" class="form-control" placeholder="Enter Facebook profile URL" />
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>

                        <!-- Instagram URL -->
                        <div class="form-group">
                            <label asp-for="InstagramUrl" class="control-label"></label>
                            <input asp-for="InstagramUrl" class="form-control" placeholder="Enter Instagram profile URL" />
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="fas fa-save"></i> Save
                            </button>
                            <a asp-controller="Team" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('image-preview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
