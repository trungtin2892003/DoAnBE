@model IEnumerable<ShopCake.Models.Setting>

@{
    ViewData["Title"] = "Quản lý Cài đặt";
}

<div class="container mt-4">

    <div class="mb-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm Cài đặt Mới
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Tên Cài đặt</th>
                <th>Giá trị</th>
                <th>Ngày Tạo</th>
                <th>Người Tạo</th>
                <th>Ngày Cập nhật</th>
                <th>Người Cập nhật</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.createdBy)</td>
                        <td>@Html.DisplayFor(modelItem => item.updatedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.updatedBy)</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.SET_ID">
                                <i class="fas fa-edit"></i> Sửa
                            </a>

                            <a href="#" onclick="event.preventDefault(); document.getElementById('deleteForm-@item.SET_ID').submit();" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>Xóa
                            </a>
                            <form id="deleteForm-@item.SET_ID" action="@Url.Action("Delete", new { id = item.SET_ID })" method="post" style="display:none;">
                                @Html.AntiForgeryToken()
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">Không có dữ liệu hiển thị</td>
                </tr>
            }
        </tbody>
    </table>
</div>
