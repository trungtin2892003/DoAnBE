@model ShopCake.Models.Setting

@{
    ViewData["Title"] = "Edit Setting";
}



<div class="container mt-4">
    <h1 class="text-center text-primary">Thêm Cài Đặt Mới</h1>
    <hr />
    <div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="SET_ID" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter setting name" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Value" class="form-label"></label>
                <input asp-for="Value" class="form-control" placeholder="Enter setting value" type="text"/>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
