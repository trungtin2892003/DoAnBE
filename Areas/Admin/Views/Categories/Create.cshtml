@model ShopCake.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <!-- Form Title -->
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h2 class="text-warning">Create New Category</h2>
            <p class="text-muted">Fill in the details below to create a new category.</p>
        </div>
    </div>

    <!-- Form Container -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">Category Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Name Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Display Order Field -->
                        <div class="form-group mb-3">
                            <label asp-for="DisplayOrder" class="form-label"></label>
                            <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <!-- Updated By Field -->
                        <div class="form-group mb-3">
                            <label asp-for="updatedBy" class="form-label"></label>
                            <input asp-for="updatedBy" class="form-control" placeholder="Enter updated by" />
                            <span asp-validation-for="updatedBy" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="fas fa-save"></i> Create
                            </button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}}
