@model ShopCake.Models.Category

@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" class="border p-4 rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="CAT_ID" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DisplayOrder" class="form-label fw-bold">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="CreatedDate" class="form-label fw-bold">Created Date</label>
                    <input asp-for="CreatedDate" type="date" class="form-control" readonly />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="createdBy" class="form-label fw-bold">Created By</label>
                    <input asp-for="createdBy" class="form-control" readonly />
                    <span asp-validation-for="createdBy" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="updatedDate" class="form-label fw-bold">Updated Date</label>
                    <input asp-for="updatedDate" type="date" class="form-control" />
                    <span asp-validation-for="updatedDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="updatedBy" class="form-label fw-bold">Updated By</label>
                    <input asp-for="updatedBy" class="form-control" />
                    <span asp-validation-for="updatedBy" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
