@model IEnumerable<ShopCake.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3 class="card-title">Category List</h3>
                            </div>
                            <div class="col-md-auto">
                                <a asp-action="Create" id="btnAdd"
                                   type="button"
                                   class="btn btn-warning">
                                    <i class="fa-light fa-add me-1"></i> Add new
                                </a>
                            </div>
                        </div>
                    </div>
                    <form method="get" action="@Url.Action("Index")">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search by product name..." value="@ViewData["CurrentFilter"]" />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src="~/Data/Product/@item.Avatar" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CAT_ID)
            </td>
            <td>
             <a asp-action="Edit" asp-route-id="@item.PRO_ID" title="Edit" class="text-primary">
                        <i class="fas fa-edit"></i>
                    </a>
                                  <a href="#" onclick="event.preventDefault(); document.getElementById('deleteForm-@item.PRO_ID').submit();" class="text-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <form id="deleteForm-@item.PRO_ID" action="@Url.Action("Delete", new { id = item.PRO_ID })" method="post" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
</div>
  </div>
<!-- /.card-body -->
 </div>
<!-- /.card -->
            </div>


        </div>
    </div>
</div>

