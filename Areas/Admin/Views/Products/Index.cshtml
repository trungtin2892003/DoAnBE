@model IEnumerable<ShopCake.Models.Product>

@{
    ViewData["Title"] = "Category List";
}

<div class="container my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-warning">Product List</h1>
        <a asp-action="Create" class="btn btn-warning">
            <i class="fas fa-plus me-1"></i> Add New
        </a>
    </div>

    <!-- Search Form -->
    <form method="get" action="@Url.Action("Index")" class="d-flex mb-3">
        <input type="text" name="searchString" class="form-control me-2" placeholder="Search by product name..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-outline-waring">
            <i class="fas fa-search"></i> Search
        </button>
    </form>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Avatar</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.DiscountPrice)</th>
                            <th>@Html.DisplayNameFor(model => model.Unit)</th>
                            <th>@Html.DisplayNameFor(model => model.Rate)</th>
                            <th>@Html.DisplayNameFor(model => model.createdBy)</th>
                            <th>@Html.DisplayNameFor(model => model.updatedBy)</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Data/Product/@item.Avatar" alt="Product Image"  style="width: 100px; height: 100px;" />
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>
                                      
                                        @if (item.DiscountPrice > 0)
                                        {
                                            <span style="color: red; font-weight: bold;"> - Giảm giá!</span>
                                        }
                                        @Html.DisplayFor(modelItem => item.DiscountPrice)

                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                                    <td>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Rate)
                                            {
                                                <span class="fa fa-star" style="color:gold;"></span> <!-- Hiển thị sao vàng -->
                                            }
                                            else
                                            {
                                                <span class="fa fa-star" style="color:gray;"></span> <!-- Hiển thị sao xám -->
                                            }
                                        }
                                    </td>

                                    <td>@Html.DisplayFor(modelItem => item.createdBy)</td>
                                    <td>@Html.DisplayFor(modelItem => item.updatedBy)</td>


                                    <td class="d-flex gap-1 ">
                                        <a class="btn btn-sm btn-warning " asp-action="Edit" asp-route-id="@item.PRO_ID">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.PRO_ID">
                                            <i class="fas fa-info-circle"></i> Chi tiết
                                        </a>
                                        <a href="#" onclick="event.preventDefault(); document.getElementById('deleteForm-@item.PRO_ID').submit();" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i>Xóa
                                        </a>
                                        <form id="deleteForm-@item.PRO_ID" action="@Url.Action("Delete", new { id = item.PRO_ID })" method="post" style="display:none;">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">No products found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteItem(id) {
        if (confirm("Are you sure you want to delete this item?")) {
            document.getElementById(`deleteForm-${id}`).submit();
        }
    }
</script>
