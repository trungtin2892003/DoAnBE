@model List<ShopCake.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Shopping cart</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/">Home</a>
                    <span>Shopping cart</span>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="~/Data/Product/@item.ProductImage" alt="@item.ProductName" style="width: 150px; height: 150px;" />
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.ProductName</h6>
                                            <h5>@string.Format("{0:0,0.000}", @item.Price) VND</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity w-2">
                                            <input type="number" class="qty-input" id="quantity-@item.CAR_ID" value="@item.Quantity" min="0" max="50" required oninput="validatePrice(this)"
                                            onchange="updateQuantity(@item.CAR_ID)" style="width: 50px; text-align: center;">
                                        </div>
                                        <span id="error-message" style="color: red; font-size: 12px;"></span>
                                    </td>

                                    <td class="cart__price" id="total-price-@item.PRO_ID">
                                       @string.Format("{0:0,0.000}", @item.TotalPrice) VND
                                    </td>
                                    <td class="cart__close">
                                        <a href="#" onclick="event.preventDefault(); document.getElementById('deleteForm-@item.CAR_ID').submit();">
                                            <span class="icon_close"></span>
                                        </a>
                                        <form id="deleteForm-@item.CAR_ID" action="@Url.Action("Delete", new { id = item.CAR_ID })" method="post" style="display:none;">
                                            @Html.AntiForgeryToken()
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="/">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a asp-action="Index" asp-controller="Cart"><i class="fa fa-spinner"></i> Update cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span id="subtotal">@string.Format("{0:0,0.000}",@Model.Sum(x => x.TotalPrice)) VND</span></li>
                        <li>Total <span id="cart-total">@string.Format("{0:0,0.000}", @Model.Sum(x => x.TotalPrice)) VND</span></li>
                    </ul>
                    <a asp-action="checkout" asp-controller="Cart" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
</section>
    <script>
    function updateQuantity(cartId) {
        const newQuantity = document.getElementById('quantity-' + cartId).value;

        const payload = {
            cartId: cartId,
            quantity: parseInt(newQuantity, 10)
        };

        $.ajax({
            url: '/Cart/UpdateQuantity',  // API route để xử lý cập nhật
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (response) {
                console.log('Quantity updated successfully');
                // Cập nhật lại giá trị TotalPrice nếu cần
                $('#total-price-' + cartId).text(response.newTotalPrice);
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });
    }


    function validatePrice(input) {
        const errorMessage = document.getElementById("error-message");

        if (input.value > 50) {
            errorMessage.textContent = "Yêu cầu nhập < 50!";
            input.value = 50;
        } else {
            errorMessage.textContent = ""; // Xóa lỗi nếu giá trị hợp lệ
        }
    }
    </script>



