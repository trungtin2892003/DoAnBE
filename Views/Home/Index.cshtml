<script>
    function filterProducts(categoryId) {
        // Ẩn tất cả các danh mục sản phẩm
        document.querySelectorAll('.products-by-category').forEach(function (element) {
            element.classList.add('d-none');
        });

        // Hiển thị danh mục được chọn
        const selectedCategory = document.getElementById('products-category-' + categoryId);
        if (selectedCategory) {
            selectedCategory.classList.remove('d-none');
        }
    }


</script>

