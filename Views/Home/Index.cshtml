@{
    // Lấy danh sách danh mục từ ViewData
    var categories = ViewData["Categories"] as List<Category> ?? new List<Category>();
}

<!-- Categories Section -->
<div class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var category in categories)
                {
                    <div class="categories__item" onclick="filterProducts(@category.CAT_ID)" @((categories.IndexOf(category) == 0 ? "active" : ""))>
                        <div class="categories__item__icon">
                            <span class="flaticon-029-cupcake-3"></span>
                            <h5>@category.Name</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Categories Section End -->
<!-- Product Section -->
<div class="product spad">
    <div class="container">
        <div class="row">
            @foreach (var product in categories.FirstOrDefault()?.Products ?? new List<Product>())
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product?.PRO_ID" class="text-dark">
                    <div class="product__item ">
                        <div class="product__item__pic set-bg" data-setbg="/Data/product/@product.Avatar">
                            <div class="product__label">
                                <span>@product?.Category?.Name</span>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6>@product?.Name</h6>
                                <div class="product__item__price">@product?.Price.ToString("#,##0,##") vnđ</div>
                            <div class="cart_add">
                                    <a asp-controller="Cart" asp-action="Index"
                                       asp-route-productId="@product?.PRO_ID"
                                       asp-route-productName="@product?.Name"
                                       asp-route-price="@product?.Price"
                                       asp-route-productImage="/Data/product/@product?.Avatar"
                                       class="btn btn-primary">
                                        Add to Cart
                                    </a>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Product Section End -->
